{
  "name": "pw-example",
  "version": "2.0.0",
  "description": "Playwright and TypeScript Example",
  "scripts": {
    "check-format": "prettier --check .",
    "delete-reports": "rimraf ./reports/* || true",
    "pretest": "npm run delete-reports",
    "postinstall": "npx playwright install",
    "format": "prettier --write .",
    "check-lint": "eslint . -c ts --fix --max-warnings=0",
    "check-all": "npm run format && npm run check-lint",
    "test": "playwright test",
    "report": "npx playwright show-report ./reports/html",
    "prepare": "husky install"
  },
  "keywords": [
    "Playwright",
    "e2e",
    "TypeScript"
  ],
  "author": "Dzmitry_Shaplyka@epam.com",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "1.45.3",
    "@reportportal/agent-js-playwright": "^5.1.9",
    "@types/lodash": "^4.17.7",
    "@types/node": "22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "dotenv": "^16.4.5",
    "eslint": "9.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-playwright": "^1.6.2",
    "husky": "^9.1.4",
    "lodash": "^4.17.21",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "winston": "^3.13.1"
  }
}
